+        [nswindow setColorSpace:[NSColorSpace displayP3ColorSpace]];
+
+    } else if (SDL_strcasecmp(hint, "adobergb1998") == 0) {
+        [nswindow setColorSpace:[NSColorSpace adobeRGB1998ColorSpace]];
+
